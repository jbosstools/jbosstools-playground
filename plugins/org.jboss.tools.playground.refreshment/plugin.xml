<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:help?after=about">
         <command
               commandId="org.jboss.tools.playground.refreshment.command"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.jboss.tools.playground.refreshment.RefreshInstallationHandler"
            id="org.jboss.tools.playground.refreshment.command"
            name="Refresh installaiton">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.ide.unknownEditorStrategy">
      <strategy
            class="org.jboss.tools.playground.refreshment.CheckForEditorToInstallStrategy"
            id="org.jboss.tools.playground.refreshment.spollEditorToInstall"
            label="Ask service for editor to install">
      </strategy>
   </extension>

</plugin>
